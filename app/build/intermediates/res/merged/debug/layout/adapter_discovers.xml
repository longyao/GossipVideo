<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_area_touch"
    android:padding="15dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/img_discover"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_news_default" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/img_discover_play"
        android:layout_alignLeft="@+id/img_discover"
        android:layout_alignRight="@+id/img_discover"
        android:layout_alignTop="@+id/img_discover"
        android:layout_alignBottom="@+id/img_discover"
        android:src="@drawable/ic_discovery_play"
        android:scaleType="center"/>
    <TextView
        android:id="@+id/tv_discover_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_discover"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_color_back"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_discover_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bebebe"
        android:textSize="13sp"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_discover_desc" />
    <TextView
        android:id="@+id/tv_read_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:textColor="#bebebe"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_discover_desc" />
</RelativeLayout>
