<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/video_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_area_touch"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_video"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:background="@color/gray_light"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:background="@color/transparent_mid"
            android:layout_alignRight="@+id/img_video"
            android:layout_alignBottom="@+id/img_video"
            android:paddingLeft="2dp"
            android:paddingBottom="1dp"
            android:paddingRight="2dp"/>

        <TextView
            android:id="@+id/tv_video_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_video"
            android:layout_marginLeft="10.5dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10.5dip"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/text_color_back"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_watch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_video"
            android:layout_marginLeft="10.5dp"
            android:layout_alignBottom="@id/img_video"
            android:drawableLeft="@drawable/ic_watch_count"
            android:drawablePadding="5dp"
            android:paddingBottom="3dp"
            android:textColor="@color/text_color_gray"
            android:textSize="13sp"/>
    </RelativeLayout>
</LinearLayout>
