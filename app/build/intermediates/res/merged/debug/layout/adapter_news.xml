<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_area_touch"
    android:padding="7dp">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/img_news"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_news_default"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tv_news_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.5dp"
        android:layout_toRightOf="@id/img_news"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/text_color_back"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_news_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.5dp"
        android:layout_toRightOf="@id/img_news"
        android:layout_alignWithParentIfMissing="true"
        android:textColor="#bebebe"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_news_desc"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/tv_read_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:textColor="#bebebe"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_news_desc"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
